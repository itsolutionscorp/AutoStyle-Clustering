s(:block, s(:defn, :combine_anagrams, s(:args, :words), s(:lasgn, :final_anagrams, s(:array)), s(:while, s(:call, s(:call, s(:lvar, :words), :length), :>, s(:lit, 0)), s(:block, s(:lasgn, :current_item, s(:call, s(:lvar, :words), :pop)), s(:lasgn, :anagrams, s(:iter, s(:call, s(:lvar, :words), :find_all), s(:args, :item), s(:call, nil, :anagram?, s(:lvar, :current_item), s(:lvar, :item)))), s(:if, s(:call, s(:lvar, :anagrams), :empty?), s(:call, s(:lvar, :final_anagrams), :<<, s(:array, s(:lvar, :current_item))), s(:block, s(:call, s(:lvar, :final_anagrams), :<<, s(:call, s(:call, s(:array, s(:lvar, :current_item)), :+, s(:lvar, :anagrams)), :sort)), s(:iter, s(:call, s(:lvar, :anagrams), :each), s(:args, :anagram), s(:call, s(:lvar, :words), :delete, s(:lvar, :anagram)))))), true), s(:return, s(:call, s(:lvar, :final_anagrams), :sort))), s(:defn, :anagram?, s(:args, :word_one, :word_two), s(:lasgn, :a, s(:call, s(:call, s(:call, s(:call, s(:lvar, :word_one), :downcase), :split, s(:str, "")), :sort), :join)), s(:lasgn, :b, s(:call, s(:call, s(:call, s(:call, s(:lvar, :word_two), :downcase), :split, s(:str, "")), :sort), :join)), s(:call, s(:lvar, :a), :==, s(:lvar, :b))))