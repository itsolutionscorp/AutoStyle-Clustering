s(:defn, :combine_anagrams, s(:args, :words), s(:lasgn, :final_array_of_arrays, s(:array)), s(:lasgn, :index, s(:lit, 0)), s(:iter, s(:call, s(:lvar, :words), :each), s(:args, :word_to_add), s(:block, s(:lasgn, :match_made, s(:false)), s(:iter, s(:call, s(:lvar, :final_array_of_arrays), :each), s(:args, :anagram_cat), s(:block, s(:lasgn, :anagram, s(:call, s(:lvar, :anagram_cat), :[], s(:lit, 0))), s(:if, s(:call, s(:call, s(:call, s(:call, s(:lvar, :anagram), :downcase), :chars), :sort), :==, s(:call, s(:call, s(:call, s(:lvar, :word_to_add), :downcase), :chars), :sort)), s(:block, s(:lasgn, :match_made, s(:true)), s(:call, s(:lvar, :anagram_cat), :<<, s(:lvar, :word_to_add)), s(:lasgn, :index, s(:call, s(:lvar, :index), :+, s(:lit, 1)))), nil))), s(:if, s(:lvar, :match_made), nil, s(:call, s(:lvar, :final_array_of_arrays), :<<, s(:call, nil, :Array, s(:lvar, :word_to_add)))))), s(:return, s(:lvar, :final_array_of_arrays)))