s(:block, s(:defn, :is_an_anagram?, s(:args, :first_word, :second_word), s(:call, s(:call, s(:call, s(:call, s(:lvar, :first_word), :chars), :sort), :join), :==, s(:call, s(:call, s(:call, s(:lvar, :second_word), :chars), :sort), :join))), s(:defn, :combine_anagrams, s(:args, :words), s(:lasgn, :final_anagram_array, s(:array)), s(:while, s(:call, s(:call, s(:lvar, :words), :length), :>, s(:lit, 0)), s(:block, s(:call, s(:lvar, :final_anagram_array), :<<, s(:iter, s(:call, s(:lvar, :words), :select), s(:args, :x), s(:call, nil, :is_an_anagram?, s(:call, s(:call, s(:lvar, :words), :first), :downcase), s(:call, s(:lvar, :x), :downcase)))), s(:lasgn, :words, s(:iter, s(:call, s(:lvar, :words), :reject), s(:args, :x), s(:call, nil, :is_an_anagram?, s(:call, s(:call, s(:lvar, :words), :first), :downcase), s(:call, s(:lvar, :x), :downcase))))), true), s(:return, s(:lvar, :final_anagram_array))))