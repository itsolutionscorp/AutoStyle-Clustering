public int multiply(int x,int y){
  int product=0;
  if ((x == 0) || (y == 0)) {
    return 0;
  }
 else   if ((x != 1) && ((x & (x - 1)) == 0)) {
    x=x >> 1;
    while (x > 0) {
      y=y << 1;
      x=x >> 1;
    }
    return y;
  }
 else   if ((y != 1) && ((y & (y - 1)) == 0)) {
    y=y >> 1;
    while (y > 0) {
      x=x << 1;
      y=y >> 1;
    }
    return x;
  }
 else {
    while (y > 0) {
      product=add(product,x);
      y=add(y,-1);
    }
    return product;
  }
}

