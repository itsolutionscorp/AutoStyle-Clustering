public int multiply(int x,int y){
  if (y == 1) {
    return x;
  }
  if (x == 1) {
    return y;
  }
  if (x == 0 || y == 0) {
    return 0;
  }
  if (y < 0) {
    int temp=y;
    y=x;
    x=temp;
  }
  if ((y < 0) && (x < 0)) {
    x=add(1,(~x));
    y=add(1,(~y));
  }
  int total=0;
  while (y > 0) {
    int firstbit=(y & 1);
    if (firstbit == 1) {
      total=add(total,x);
    }
    x=(x << 1);
    y=(y >> 1);
  }
  return total;
}

