public int multiply(int x,int y){
  if (x == 0 || y == 0) {
    return 0;
  }
  if (x < 0 && y > 0) {
    return multiply(y,x);
  }
  if (x < 0 && y < 0) {
    return multiply(add(~x,1),add(~y,1));
  }
  int s=0;
  int o=0;
  while (s < 32) {
    if ((x & 1) == 1) {
      if (s == 0) {
        o=y;
      }
      y=y << s;
    }
    x=x >> 1;
    s=add(s,1);
  }
  return add(y,o);
}

