public int multiply(int x,int y){
  if ((x == 0) || (y == 0)) {
    return 0;
  }
  int flip=0;
  if ((x < 0) ^ (y < 0)) {
    flip=1;
  }
  if (x < 0) {
    x=add(~x,1);
  }
  if (y < 0) {
    y=add(~y,1);
  }
  int temp=0;
  while (y != 1) {
    if ((y & 1) == 1) {
      temp=add(temp,x);
    }
    x=x << 1;
    y=y >> 1;
  }
  int prod=add(x,temp);
  if (flip == 1) {
    prod=add(~prod,1);
  }
  return prod;
}

