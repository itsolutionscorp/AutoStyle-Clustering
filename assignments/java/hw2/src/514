public int multiply(int x,int y){
  if (x == 0 || y == 0) {
    return 0;
  }
  if (x == 1) {
    return y;
  }
  if (y == 1) {
    return x;
  }
 else {
    int leastSigBit=y & 1;
    if (leastSigBit == 1) {
      return add(multiply(x << 1,y >> 1),x);
    }
 else {
      return multiply(x << 1,y >> 1);
    }
  }
}

