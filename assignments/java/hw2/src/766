public int multiply(int x,int y){
  if (x == 0 || y == 0) {
    return 0;
  }
 else   if (x < 0 && y < 0) {
    return multiply(add(~x,1),add(~y,1));
  }
 else   if (x < 0) {
    x=add(~x,1);
    return add(~multiply(x,y),1);
  }
 else   if (y < 0) {
    y=add(~y,1);
    return add(~multiply(x,y),1);
  }
 else {
    while (y != 1) {
      if ((y & 1) == 0) {
        x=x << 1;
        y=y >> 1;
      }
 else {
        return add(x,multiply(x,add(y,add(~1,1))));
      }
    }
  }
  return x;
}

