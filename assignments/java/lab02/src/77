public static void main(String[] args){
  Scanner scanner=new Scanner(System.in);
  boolean justStarting=true;
  int total=0;
  int subtotal=0;
  int k=0;
  while (true) {
    k=scanner.nextInt();
    subtotal+=k;
    total+=k;
    if (k == 0) {
      if (subtotal == 0 && justStarting != true) {
        System.out.println("total " + total);
        return;
      }
      System.out.println("subtotal " + subtotal);
      subtotal=0;
      justStarting=false;
    }
 else {
      justStarting=true;
    }
  }
}

