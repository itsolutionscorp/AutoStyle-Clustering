public static void main(String[] args){
  Scanner scanner=new Scanner(System.in);
  boolean justStarting=true;
  int total=0;
  int subtotal=0;
  while (true) {
    int k;
    k=scanner.nextInt();
    total=total + k;
    subtotal=subtotal + k;
    if (k == 0) {
      System.out.println("subtotal " + subtotal);
      subtotal=0;
      k=scanner.nextInt();
      total=total + k;
      subtotal=subtotal + k;
      if (k == 0) {
        System.out.println("total " + total);
        return;
      }
    }
  }
}

