public static void main(String[] args){
  Scanner scanner=new Scanner(System.in);
  boolean justStarting=true;
  int total=0;
  int subtotal=0;
  boolean repeated=false;
  while (true) {
    int k;
    k=scanner.nextInt();
    if (k != 0) {
      subtotal+=k;
      repeated=false;
    }
 else {
      if (repeated == false) {
        total+=subtotal;
        System.out.println("subtotal " + subtotal);
        subtotal=0;
        repeated=true;
      }
 else {
        System.out.println("total " + total);
        System.exit(0);
      }
    }
  }
}

