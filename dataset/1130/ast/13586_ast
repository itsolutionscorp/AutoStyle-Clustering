s(:defn, :combine_anagrams, s(:args, :words), s(:lasgn, :out, s(:call, s(:const, :Array), :new)), s(:lasgn, :s_words, s(:iter, s(:call, s(:lvar, :words), :map), s(:args, :w), s(:call, s(:call, s(:call, s(:call, s(:lvar, :w), :downcase), :split, s(:lit, //)), :sort), :join))), s(:lasgn, :groups, s(:call, s(:lvar, :s_words), :uniq)), s(:iter, s(:call, s(:lit, 0), :upto, s(:call, s(:call, s(:lvar, :groups), :length), :-, s(:lit, 1))), s(:args, :i), s(:call, s(:lvar, :out), :<<, s(:iter, s(:call, s(:lvar, :words), :select), s(:args, :w), s(:call, s(:call, s(:call, s(:call, s(:call, s(:lvar, :w), :downcase), :split, s(:lit, //)), :sort), :join), :=~, s(:call, s(:const, :Regexp), :new, s(:call, s(:call, s(:str, "^"), :+, s(:call, s(:lvar, :groups), :[], s(:lvar, :i))), :+, s(:str, "$"))))))), s(:return, s(:lvar, :out)))